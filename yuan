    <script>
        var onspan = `<span><img id='gou' src="./错误.png" alt=""></span>`
        var span = `<span><img id='gou' src="./对勾小.png" alt=""></span>`
        function cz() {
            history.go(0)
        }
        function bbb(this1) {
            this1.classList.add('bianhong')
            this1.classList.remove('bianlv')
        }
        function sss(this1) {
            this1.classList.add('bianlv')
            this1.classList.remove('bianhong')
        }
        //校验用户名
        function checkYHM(yhm) {
            var yhm = document.querySelector('#yhm')
            var reg = (/^[\w-]{4,12}$/)
            if (yhm.value.trim() == "") {
                yhmErr.innerHTML = onspan + "用户名不能为空";
                bbb(yhm)
                return false;
            }
            if (!reg.test(yhm.value)) {
                yhmErr.innerHTML = onspan + "用户名必须是4-12汉字";
                bbb(yhm)
                return false;
            }

            //校验成功
            yhmErr.innerHTML = span
            sss(yhm)
            return true;
        }
        //密码
        function checkMM(mm) {
            var mm = document.querySelector('#mm')
            var reg = /^[\w\d\W]{6,20}$/
            if (mm.value.trim() == "") {
                mmErr.innerHTML = onspan + "密码不能为空";

                bbb(mm)
                return false;
            }
            if (!reg.test(mm.value)) {
                mmErr.innerHTML = onspan + "密码必须是6-20位";
                bbb(mm)
                return false;
            }

            //校验成功
            sss(mm)
            mmErr.innerHTML = span;
            return true;
        }

        //校验昵称
        function checkNC() {
            var nc = document.querySelector('#nc')
            var reg = /^[\u4e00-\u9fa5]{2,20}$/
            //非空校验
            if (nc.value.trim() == "") {
                ncErr.innerHTML = onspan + "昵称不能为空";
                bbb(nc)
                return false;
            }
            //格式校验
            if (!reg.test(nc.value)) {
                ncErr.innerHTML = onspan + "昵称必须是2-20汉字";
                return false;
                bbb(nc)
            }
            //校验成功
            sss(nc)
            ncErr.innerHTML = span
            return true;
        }
        //校验手机
        function checkPhone() {
            var phone = document.querySelector('#phone')
            var reg = /^(13[0-9]|14[5|7]|15[0|1|2|3|5|6|7|8|9]|18[0|1|2|3|5|6|7|8|9])\d{8}$/
            //非空校验
            if (phone.value.trim() == "") {
                phoneErr.innerHTML = onspan + "手机号不能为空";
                bbb(phone)
                return false;
            }

            //格式校验
            if (!reg.test(phone.value)) {
                phoneErr.innerHTML = onspan + "手机号不符合格式";
                bbb(phone)
                return false;
            }

            //校验成功
            sss(phone)
            phoneErr.innerHTML = span
            return true;
        }
        //邮箱
        function checkYX() {
            var email = document.querySelector('#email')
            var reg = /^(([^<>()[\]\\.,;:\s@"]+(\.[^<>()[\]\\.,;:\s@"]+)*)|(".+"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/
            if (email.value.trim() == "") {
                emailErr.innerHTML = onspan + "邮箱不能为空";
                bbb(email)
                return false;
            }
            if (!reg.test(email.value)) {
                emailErr.innerHTML = onspan + "邮箱有误";
                bbb(email)
                return false;
            }

            //校验成功
            sss(email)
            emailErr.innerHTML = span;
            return true;
        }
        function checkSFZ() {
            var idCard = document.querySelector('#idCard')
            var reg = /^[1-9]\d{5}(?:18|19|20)\d{2}(?:0[1-9]|10|11|12)(?:0[1-9]|[1-2]\d|30|31)\d{3}[\dXx]$/
            if (idCard.value.trim() == "") {
                idCardErr.innerHTML = onspan + "身份证不能为空";
                bbb(idCard)
                return false;
            }
            if (!reg.test(idCard.value)) {
                idCardErr.innerHTML = onspan + "身份证有误";
                bbb(idCard)
                return false;
            }

            //校验成功
            sss(idCard)
            idCardErr.innerHTML = span
            return true;
        }
        //籍贯  
        function checkJG() {
            //非空校验
            if (jg.value == "") {
                jgErr.innerHTML = onspan + "籍贯必须选择"
                return false;
            }

            jgErr.innerHTML = span
            return true;
        }
        //校验性别
        function checkSex() {
            //非空校验
            if (!man.checked && !woman.checked) {
                sexErr.innerHTML = onspan + "性别必须选择"
                return false;
            }

            sexErr.innerHTML = span
            return true;
        }
        function checkHY() {
            //非空校验
            if (!yihun.checked && !lihun.checked && !danshen.checked && !sangou.checked) {
                hyErr.innerHTML = onspan + "婚姻状况必须选择"
                return false;
            }

            hyErr.innerHTML = span
            return true;
        }
        function checkTZ() {
            //非空校验
            if (sg.value == "") {
                tzErr.innerHTML = onspan + "身高体重必须选择"
                return false;
            }
            //非空校验
            if (tz.value == "") {
                tzErr.innerHTML = onspan + "身高体重必须选择"
                return false;
            }

            tzErr.innerHTML = span
            return true;
        }
        function checkPrice() {
            //非空校验
            if (price.value == "") {
                priceErr.innerHTML = onspan + "月薪和学历必须选择"
                return false;
            }
            //非空校验
            if (xl.value == "") {
                priceErr.innerHTML = onspan + "月薪和学历必须选择"
                return false;
            }
            priceErr.innerHTML = span
            return true;

        }
        function checkN() {
            if (nnn.value == "") {
                rrrErr.innerHTML = onspan + "请选择出生年月日"
                return false;
            }
            if (yyy.value == "") {
                rrrErr.innerHTML = onspan + "请选择出生年月日"
                return false;
            }
            if (rrr.value == "") {
                rrrErr.innerHTML = onspan + "请选择出生年月日"
                return false;
            }
            rrrErr.innerHTML = span
            return true;
        }
        //校验入口
        function checkAll() {
            var isYHM = checkYHM()
            var isNCSuc = checkNC();
            var isPhoneSuc = checkPhone();
            var isSexSuc = checkSex();
            var isMM = checkMM()
            var isYX = checkYX()
            var isSFZ = checkSFZ()
            var isJG = checkJG()
            var isHY = checkHY()
            var isPrice = checkPrice()
            // var isxl = checkXL()
            // var issg = checkSG()
            var istz = checkTZ()
            var isnnn = checkN()
            // var isyyy = checkY()
            // var isrrr = checkR()
            if (isNCSuc && isPhoneSuc && isSexSuc && isHY && isnnn &&
                isMM && isYHM && isYX && isSFZ && isJG && isPrice && istz) {
                userFrm.submit();
            }
        }
    </script>

</body>

</html>
